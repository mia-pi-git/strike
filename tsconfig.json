{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "checkJs": true,
    "outDir": "./dist",
    "incremental": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "types": ["node"],
  "include": [
    "./src/*", "./src/test/*", "scripts/run.js",
  ],
  "exclude": ["./.dist/**/*", "./scripts/**/*"],
}
